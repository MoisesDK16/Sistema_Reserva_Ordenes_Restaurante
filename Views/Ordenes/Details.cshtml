@model Restaurante_Moises_Loor.Models.Orden

<h2>Detalles de la Orden</h2>

<div>
    <h4>Orden #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente:</dt>
        <dd class="col-sm-10">@Model.Usuario.Nombre @Model.Usuario.Apellido</dd>

        <dt class="col-sm-2">Método de Pago:</dt>
        <dd class="col-sm-10">@Model.MetodoPago</dd>

        <dt class="col-sm-2">Fecha:</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Total:</dt>
        <dd class="col-sm-10">$@Model.Total.ToString("F2")</dd>
    </dl>
</div>

<h4>Detalles de la Orden</h4>
<table class="table">
    <thead>
        <tr>
            <th>Menú</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detalle in Model.Detalles)
        {
            <tr>
                <td>@detalle.Menu.Nombre</td>
                <td>@detalle.Cantidad</td>
                <td>$@detalle.Subtotal.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-primary">Volver a la Lista</a>
